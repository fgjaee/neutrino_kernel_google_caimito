exports_files(glob([
    "*.fragment",
]))

package(
    default_visibility = [
        "//:__subpackages__",
        "@kleaf//common:__pkg__",
    ],
)

filegroup(
    name = "baseconfig",
    srcs =
        [
            ":base.fragment",
        ] +
        select({
            "//config:dma_shared_buffer": [":dma_buff.fragment"],
            "//conditions:default": [],
        }),
)

genrule(
    name = "base_defconfig",
    srcs = [":baseconfig"],
    outs = ["common/base.defconfig"],
    cmd = "cat $(SRCS) >> $(OUTS)",
)

filegroup(
    name = "coresightconfig",
    srcs =
        select({
            "//config:mali_coresight": [":coresight.fragment"],
            "//conditions:default": [":nocoresight.fragment"],
        }),
)

genrule(
    name = "coresight_defconfig",
    srcs = [":coresightconfig"],
    outs = ["common/coresight.defconfig"],
    cmd = "cat $(SRCS) >> $(OUTS)",
)

filegroup(
    name = "kbaseconfig",
    srcs = ["midgard.fragment"] +
           select({
               "//config:mali_no_mali": ["nomali.fragment"],
               "//conditions:default": ["real_hw.fragment"],
           }) +
           select({
               "//config:mali_expert": ["mali_expert.fragment"],
               "//conditions:default": [],
           }) +
           select({
               "//config:mali_sync_file": ["sync_file.fragment"],
               "//conditions:default": [],
           }) +
           select({
               "//config:mali_debug": ["mali_debug.fragment"],
               "//conditions:default": [],
           }) +
           select({
               "//config:expert_no_mali": ["mali_expert_no_mali.fragment"],
               "//conditions:default": [],
           }) +
           select({
               "//config:mali_expert_debug": ["mali_expert_debug.fragment"],
               "//conditions:default": [],
           }) +
           select({
               "//config:mali_expert_debug_sync_file": ["mali_expert_debug_sync_file.fragment"],
               "//conditions:default": [],
           }) +
           select({
               "//config:mali_debug_kutf": ["debug_kutf.fragment"],
               "//conditions:default": [],
           }) +
           select({
               "//config:mali_coresight": ["coresight.fragment"],
               "//conditions:default": [],
           }) +
           select({
               "//config:mali_platform_name_meson": ["platform/meson.fragment"],
               "//config:mali_platform_name_vexpress": ["platform/vexpress.fragment"],
               "//config:mali_platform_name_vexpress_1xv7_a57": ["platform/vexpress_1xv7_a57.fragment"],
               "//config:mali_platform_name_vexpress_6xvirtex7_10mhz": ["platform/vexpress_6xvirtex7_10mhz.fragment"],
               "//conditions:default": [],
           }),
)

genrule(
    name = "kbase_defconfig",
    srcs = [":kbaseconfig"],
    outs = ["common/kbase.defconfig"],
    cmd = "cat $(SRCS) >> $(OUTS)",
)

filegroup(
    name = "kutf_defconfig",
    srcs = ["kutf.fragment"],
)
